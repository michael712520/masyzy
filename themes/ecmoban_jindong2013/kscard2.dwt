                    </div>
                    <div class="form-group">
                        <label for="card_pwd" class="col-sm-4 control-label">礼品卡密码</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="card_pwd" id="card_pwd" placeholder="礼品卡密码">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10 text-center">
                            <input type="hidden" name="act" value="{$act}"/>
                            <input type="hidden" name="back_act" value="{$back_act}"/>
                            <button type="submit" class="btn btn-default ">进入</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--{/if}-->

    <!--{if $action eq 'act_login'}-->
    <div class=" col-sm-12  bg2">
        <div class="row header"><img src="{$cat_bj}" alt=""/></div>
        <div class="row center-block"><p class="text-center">只可以选择{$sel_num}个商品</p></div>
        <form name="formLogin" action="kscard2.php" method="get">
            <div class="row ">

                {foreach from=$goods_list item=goods}
                    <div class="list-group">
                        <a href="goods_wx.php?id={$goods.cg_goodid}" class="list-group-item">
                            <div class="row ">
                                <div class="col-sm-6 col-md-4 row-1">

                                    <div class="thumbnail">
                                        <img src=" {$goods.cg_goods_img}" alt="...">


                                            <div class="checkbox checkbox-primary">
                                                <input type="checkbox" id="checkbox{$goods.cg_goodid}"
                                                       name="goods[]"
                                                       value="{$goods.cg_goodid}">
                                                <label for="checkbox{$goods.cg_goodid}" class="btn btn-info checkbox-dc">
                                                    选择兑换
                                                </label>
                                            </div>


                                    </div>
                                    <div class="col-sm-8">
                                        {$goods.cg_goodname}
                                    </div>
                                </div>

                            </div>
                        </a>
                    </div>
                {/foreach}

